<h1> <%= @goal.title %> </h1>

<ul>
  <li> Goal set by: <%= link_to @goal.user.username, user_url(@goal.user) %> </li> 
  <li> <%= @goal.body %> </li>
  <li> View Permissions: <%= @goal.goal_type %> </li>
  <li> Status: <%= @goal.is_completed ? "Completed" : "Not Completed" %></li>
</ul>

<%= link_to "Edit goal",  edit_goal_url(@goal) %>
<br>
<%= link_to "Delete Goal", goal_url(@goal), method: :delete %>
